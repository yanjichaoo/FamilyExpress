<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingTop="20dp" >

    <ImageView
        android:id="@+id/family_item_image"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/family_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/family_item_nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/family_item_name"
            android:textColor="#808080"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/family_item_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/family_item_nikename"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="#808080"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>