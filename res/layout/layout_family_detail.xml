<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/family_detail_bg"
            android:orientation="vertical"
            android:paddingLeft="77dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/family_detail_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="张小玲"
                        android:textColor="#000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/family_detail_relation"
                        style="@style/detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姐姐" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/family_detail_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                   	android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" />
            </FrameLayout>
            <!-- <TextView android:layout_width="wrap_content" android:text="我对他的称呼-老姐" -->
            <!-- android:layout_height="wrap_content" style="@style/detail_text" /> -->

            <TextView
                android:id="@+id/family_detail_nikename"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱称：@nikename" />

            <TextView
                android:id="@+id/family_detail_email"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱：@email" />

            <TextView
                android:id="@+id/family_detail_mobile"
                style="@style/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机：@mobile" />
        </LinearLayout>

        <ImageView
            android:id="@+id/family_detail_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/add_wait" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/family_detail_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_long_red_selector"
            android:text="@string/detail_send"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/family_detail_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_long_write_selector"
            android:text="@string/detail_notify"
            android:textColor="#808080"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>