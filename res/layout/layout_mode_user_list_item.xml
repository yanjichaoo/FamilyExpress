<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:paddingLeft="10dp"
	android:paddingTop="4dp" android:layout_height="wrap_content">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/list_icon"
		android:id="@+id/item_head" android:layout_marginBottom="4dp" />
	<LinearLayout android:layout_width="wrap_content"
		android:orientation="vertical" android:layout_height="wrap_content"
		android:layout_marginLeft="10dp">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/item_email"
			android:textColor="#000000" android:textSize="16dp" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/item_phone"
			android:textColor="#808080" android:textSize="13dp"
			android:layout_marginTop="3dp" />
	</LinearLayout>
</LinearLayout>
