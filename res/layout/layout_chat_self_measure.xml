<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/express_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2天前"
        android:textColor="#606060"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/express_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:textColor="#999999"
            android:textSize="14dp" />

        <FrameLayout
            android:id="@+id/express_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/self_bg_selector" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/measure_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/icon_xy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/measure_icon"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/measure_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="舒张压:200:收缩压:100,舒张压:200:收缩压:100"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/measure_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2012.04.08在益体机上测得"
                        android:textColor="#808080"
                        android:textSize="13dp" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>