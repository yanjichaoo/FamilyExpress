<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="main_text">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="modeselect_mode">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#CC6633</item>
    </style>

    <style name="modeselect_info">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="guide_main">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="detail_text">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="Theme.Foo" parent="android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="setting_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="setting_layout_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_white_line</item>
    </style>

    <style name="setting_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="setting_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:src">@drawable/layout_arrow</item>
    </style>

    <style name="setting_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="select_pop_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="note_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#db533c</item>
    </style>
    
    <style name="notfullscreen" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>